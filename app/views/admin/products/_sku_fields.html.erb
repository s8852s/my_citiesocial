<div class="columns nested-fields" data-new-record='<%= form.object.new_record? %>'>
  <!-- data-new-record='<%# form.object.new_record? %>判斷是否已經寫入DB -->
  <div class="column is-6">
    <div class="field">
      <%= form.text_field :spec, placeholder:'規格', class: 'input' %>
    </div>
  </div>
  <div class="column is-2">
    <div class="field">
      <%= form.text_field :quantity, placeholder:'數量', class: 'input' %>
    </div>
  </div>
  <div class="column is-1">
    <div class="field">
    <%= link_to '刪除', '#', class: 'button is-danger', data: {action: 'product-form#remove_sku'} %>
    </div>
  </div>
  <%= form.hidden_field :_destroy %>
  <!-- :_destroy是特殊寫法，當該值為true或1時，送到後端時就會把該筆資料從DB刪除 -->
</div>